<h1>Administrar Posts</h1>

<form>
 <input name="buscado" <%= @buscado %> >
 <button type="submit">Buscar</button>
</form>


<%= link_to "Nuevo post",new_post_path %><br>
<%= link_to "Ir Menu","/menu" %>
<h2>Lista de Posts</h2>


<% @posts.each do |post|%>
  <h3><%= link_to post.title, post %></h3>
  <p><%= post.text %></p>
  <h5>Fecha de Creacion: <%=  post.created_at.strftime("%b %d, %Y") %> </h5>

  
<% end %>


